<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carditem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_margin="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:orientation="vertical"
            android:elevation="5dp"

            >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/tempcimage1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:foregroundGravity="center"
                android:src="@drawable/playicon" />

            <ImageView
                android:id="@+id/tempcimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/playiconn"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:alpha=".5"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/tempcimage1"
                android:layout_alignStart="@+id/tempcimage1" />
        </RelativeLayout>
            <TextView
                android:id="@+id/temptitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tempcimage"
                android:layout_alignStart="@+id/tempcimage"
                android:layout_below="@+id/tempcimage"
                android:layout_marginBottom="10dp"
                android:text="Temp Title"
                android:textColor="#000000"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>